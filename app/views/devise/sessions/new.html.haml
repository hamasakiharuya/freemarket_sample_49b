#session-new-container
  .contents
    .header
      = link_to root_path do
        = image_tag("logo.svg", class: "image", size: "185x49")
    .sign_up
      %p アカウントをお持ちでない方はこちら
      = link_to "新規会員登録", index_path ,class: "sign_up__ele"
    .main
      .account-button.main__ele
        .facebook
          = link_to user_facebook_omniauth_authorize_path, class: "account-button__facebook" do
            %i.fab.fa-facebook.fa-2x>
            facebookでログイン
        .google
          = link_to user_google_oauth2_omniauth_authorize_path, class: "account-button__google" do
            %i.fab.fa-google>
            Googleでログイン
      .form
        .main__ele
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            .field.email
              = f.email_field :email, autofocus: true, autocomplete: "email", class: "form__ele"
            .field.password
              = f.password_field :password, autocomplete: "current-password",class: "form__ele"
            .foom__ele.actions
              = f.submit "ログイン", class: "login"
        .forget-password
          = link_to "パスワードをお忘れの方", new_password_path(resource_name), class: "forget-password"
      = render "devise/shared/links"
    .footer
      .nav
        %ul
          %li= link_to "プライバシーポリシー", root_path
          %li= link_to "メルカリ利用規約", root_path
          %li= link_to "特定商取引に関する表記", root_path
      .logo
        = image_tag("logo-gray.svg", size: "80x65")
        %p
          %small © 2019 Mercari
