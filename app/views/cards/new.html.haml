%header.registration_header
  = link_to root_path do
    = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1073571291', width: "185", height: "49"
  %nav.progress_container
    %ol.progressbar
      %li#li_1.active
        会員情報
        #status_1.progress-status.active
      %li#li_2.active
        電話番号認証
        #status_2.progress-status.active
      %li#li_3.active
        お届け先住所入力
        #status_3.progress-status.active
      %li#li_4.active.now
        支払い方法
        #status_4.progress-status.active
      %li#li_5
        完了
        #status_5.progress-status
%section.form-container
  %h2.form-container__title カード情報入力
  = form_with url: user_card_path(current_user.id), id: 'charge-form' do |f|
    .new_card
      .form_box
        .field
          = f.label 'カード情報'
          %span 必須
          %br/
          = f.text_field :number, maxlength: '16', placeholder: 'TEST：4242424242424242', class: "field__form"
        .field
          = f.label '有効期限'
          %span 必須
          %br/
          = f.select :exp_month, (1..12).to_a
          　月
          %br/
          = f.select :exp_year, (2019..2025).to_a
          　年
        .field
          = f.label 'セキュリティコード'
          %span 必須
          %br/
          = f.text_field :cvc, maxlength: '4', placeholder: 'カード背面4桁もしくは3桁', class: "field__form"
        .field
          = button_tag "登録する", class: 'field__btn', type: 'button', id: 'card_submit'
= render 'devise/registrations/registration_footer'